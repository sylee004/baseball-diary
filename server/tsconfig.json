{
  "compilerOptions": {
    "module": "CommonJS",                     // 모듈 시스템 설정 (Node.js 환경에서는 CommonJS)
    "declaration": true,                      // 타입 선언 파일 생성 (.d.ts)
    "removeComments": true,                   // 컴파일 시 주석 제거
    "emitDecoratorMetadata": true,            // 데코레이터 메타데이터 생성
    "experimentalDecorators": true,           // 실험적인 데코레이터 기능 활성화
    "target": "ES2020",                       // ECMAScript 버전 설정
    "sourceMap": true,                        // 소스맵 파일 생성
    "outDir": "./dist",                       // 컴파일된 파일들이 출력되는 경로
    "baseUrl": "./",                          // 프로젝트 루트 경로
    "incremental": true,                      // 증분 컴파일 활성화
    "strict": true,                           // 엄격한 타입 검사 옵션 활성화
    "moduleResolution": "node",               // 모듈 해석 전략 (Node.js 스타일)
    "esModuleInterop": true,                  // CommonJS와 ES 모듈 간의 호환성 지원
    "skipLibCheck": true,                     // 라이브러리의 타입 체크 건너뛰기
    "forceConsistentCasingInFileNames": true  // 파일 이름의 대소문자 구분 강제
  },
  "include": ["src/**/*"],                    // 컴파일할 파일 경로
  "exclude": ["node_modules", "dist"]         // 컴파일에서 제외할 파일 및 디렉터리
}
